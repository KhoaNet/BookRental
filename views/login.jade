doctype html
html(lang='en')
  head
     include ./head
  body
      main.form-signin(style='text-align:center')
        form(action="/login" method="POST")
            h1.h3.mb-3.fw-normal Login
            .form-floating
            input#floatingInput.form-control(type='email' placeholder='name@example.com' name='email')
            label(for='floatingInput') Email address
            .form-floating
            input#floatingPassword.form-control(type='password' placeholder='Password' name='password')
            label(for='floatingPassword') Password
            button.w-100.btn.btn-lg.btn-primary(type='submit').mt-3 Login
            p(style="color:red").mt-5 #{message?message:''} 
            p.mt-5.mb-3.text-muted Have An Account? 
            a(href="/register") Register
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js' integrity='sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4' crossorigin='anonymous')