extends ../layout
block content
    .container
        form(action='/books/new' method='POST').row.justify-content-md-center
            fieldset
                legend New Books
                    .mb-3
                        .col-md-6
                            label.form-label(for='Title') Title
                            input.form-control(type='text' placeholder='Title' name='title' )
                    .mb-3
                        .col-md-6
                            label.form-label(for='Title') Genres
                            select.form-select(aria-label='Default select example' name='gener' )
                             each item in geners
                                option(selected='' value="#{item._id}" name="genername"  ) #{item.genername}
                    .mb-3
                        .col-md-6
                            label.form-label(for='Publish Date') Publish Date
                            input.form-control(type='date' placeholder='Publish Date' name='publishDate' )
                    .mb-3                            
                        .col-md-6
                            label.form-label(for='Cover') Cover
                            input.form-control(type='file' placeholder='Cover' name='cover' class='filepond')                            
                    .mb-3
                        .col-md-6
                            label.form-label(for='Page Count') Page Count
                            input.form-control(type='number' min="1" placeholder='PageCount' name='pageCount' )                            
                    .mb-3
                        .col-md-6
                            label.form-label(for='Description') Description
                            textarea.form-control(type='file' name='description' )                                    
                    .mb-3
                        <a href="/geners">Cancel</a>
                    button.btn.btn-primary(type='submit') Submit    