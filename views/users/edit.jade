extends ../layout

block content
    .container
            form(action='/geners/edit' method='POST').row.justify-content-md-center
                input(type="hidden",name="_id",value="#{gener._id}")
                fieldset
                    legend New Geners
                    .mb-3
                        .col-md-6
                            label.form-label(for='book_genre_name') Book genre name
                            input.form-control(type='text' placeholder='Book genre name' name='genername' value="#{gener.genername}")
                    .mb-3
                        <a href="/geners">Cancel</a>
                    button.btn.btn-primary(type='submit') Submit